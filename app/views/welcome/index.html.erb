<div class="container">
<div class="row">
<h1>Welcome Index View</h1>
<% if user_signed_in? %>
    <h3 role="presentation">Create New Post</h3>
    <div id="posttform">
      <p><%= render 'postform' %></p>
    <% end %>


<h3> Posts </h3>
    <% @user.posts.each do |post| %>

            <p class="posts-main">Title: <%= post.movie_title %></p>
            <p class="posts-main">Watch Clip: <%= link_to(post.url) %></p>
            <p class="posts-main">Description<%= post.descrition %></p>
            <p><%= image_tag post.poster_image.url(:medium) %></p>
            <p class="time-stamp"><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Created <%= time_ago_in_words(post.created_at) %> ago by: <span class="prof"><%= link_to post.user.email, user_path(@user)%></span></p>



      <% end %>
</div>
</div>
