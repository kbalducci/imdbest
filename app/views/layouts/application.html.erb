<!DOCTYPE html>
<html>
<head>
  <title>Imdbest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">IMDBest</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
        <li><% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path(@current_user), :method => :delete) %>
      <% else %>
      <%= link_to 'Sign Up Now', new_user_registration_path %>
      <%= link_to 'Sign In Now', new_user_session_path %>
      <% end %>
      </li>

      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><%=link_to 'Home', root_path %></li>
      </ul>
    </div>
  </div>
</nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>







<container>
<%= stylesheet_link_tag "slate", :media => "all" %>

    <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>

  <nav>
    <div>

     <h3 class="nav-title">IMDBest</h3>
    </div>
    </nav>
    </container>

<%= yield %>

</body>
</html>
