<!DOCTYPE html>
<html>
<head>
  <title>Imdbest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
<container>
<%= stylesheet_link_tag "slate", :media => "all" %>

    <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <nav>
    <div>
      <% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path(@current_user), :method => :delete) %>
      <% else %>
      <%= link_to 'Sign Up Now', new_user_registration_path %>
      <%= link_to 'Sign In Now', new_user_session_path %>
      <% end %>
     <h3 class="nav-title">IMDBest</h3>
    </div>
    </nav>
    </container>

<%= yield %>

</body>
</html>
